{
  "name": "servious",
  "version": "1.0.5",
  "description": "zero configuration microservices for node.js",
  "author": "Nikic Company Ltd",
  "license": "ISC",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Goran-n/servious.git"
  },
  "scripts": {
    "build": "babel src -D --watch -d dist",
    "start-dev": "nodemon --exec babel-node src/index.js",
    "req": "nodemon --exec babel-node examples/requester.js",
    "res": "nodemon --exec babel-node examples/responder.js",
    "publish": "npm run build"
  },
  "keywords": [
    "servious",
    "microservices",
    "nodejs",
    "services"
  ],
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": 2500,
    "env": {
      "DEBUG": "servious:req"
    }
  },
  "dependencies": {
    "@hapi/hoek": "^9.0.3",
    "@hapi/joi": "latest",
    "amp": "latest",
    "amp-message": "^0.1.2",
    "colors": "^1.4.0",
    "configurable": "latest",
    "debug": "^4.1.1",
    "eventemitter2": "^6.0.0",
    "lodash": "^4.17.15",
    "@nikic/node-discover": "^1.1.6",
    "portfinder": "^1.0.25",
    "socket.io": "^2.3.0",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "latest",
    "@babel/runtime": "^7.6.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-preset-latest-node": "^3.2.1",
    "eslint": "^6.6.0",
    "nodemon": "^2.0.2"
  }
}
