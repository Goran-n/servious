{
  "name": "servious",
  "version": "1.0.0",
  "description": "zero configuration microservices for node.js",
  "author": "Nikic Company Ltd",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src -D -d dist",
    "start-requester": "nodemon --exec babel-node examples/requester.js",
    "start-responder": "nodemon --exec babel-node examples/responder.js",
    "clean": "rm -rf dist",
    "coverage": "nyc -x=\"**/examples/*\" -x=\"**/*balanced*.js\" -x=\"**/test/*.js\" -x=\"**/lib/*.js\" report",
    "lint": "eslint src test",
    "lint-fix": "eslint --fix src test",
    "publish": "npm run build",
    "test": "NODE_ENV=dev nyc -x=\"**/examples/*\" -x=\"**/*balanced*.js\" -x=\"**/test/*.js\" -x=\"**/lib/*.js\" ava --timeout=60000"
  },
  "keywords": [
    "servious",
    "microservices",
    "nodejs",
    "services"
  ],
  "dependencies": {
    "@dashersw/axon": "2.0.5",
    "@dashersw/node-discover": "^1.0.4",
    "colors": "1.4.0",
    "core-js": "^3.3.3",
    "eventemitter2": "^5.0.1",
    "lodash": "^4.17.15",
    "portfinder": "^1.0.25",
    "socket.io": "^2.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "async": "^3.1.0",
    "ava": "^2.4.0",
    "commander": "^3.0.2",
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-google": "^0.14.0",
    "humanize-number": "^0.0.2",
    "nyc": "^14.1.1",
    "randomstring": "^1.1.5",
    "request": "^2.88.0",
    "sinon": "^7.5.0",
    "socket.io-client": "^2.3.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "12"
          },
          "useBuiltIns": "usage",
          "corejs": "2",
          "exclude": [
            "es6.promise"
          ]
        }
      ]
    ]
  }
}
